# OpenTelemetry Microservice Architecture Configuration
# Copy this file to .env and modify as needed

# Service Configuration
SERVICE_NAME=opentelemetry-service
SERVICE_VERSION=1.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=5000

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=
SSL_KEY_PATH=

# TPM2 Configuration
TPM2_DEVICE=/dev/tpm0
TPM2_APP_CTX_PATH=app.ctx
TPM2_PRIMARY_CTX_PATH=primary.ctx
TPM2_AK_CTX_PATH=ak.ctx

# Software TPM (swtpm) Configuration
SWTPM_DIR=$HOME/.swtpm/ztpm
SWTPM_PORT=2321
SWTPM_CTRL=2322
TPM2TOOLS_TCTI=swtpm:host=127.0.0.1,port=2321
EK_HANDLE=0x81010001
AK_HANDLE=0x8101000A
APP_HANDLE=0x8101000B

# OpenTelemetry Configuration
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=opentelemetry-service
OTEL_LOG_LEVEL=INFO

# API Gateway Configuration
GATEWAY_HOST=localhost
GATEWAY_PORT=8443
GATEWAY_SSL_VERIFY=false

# Collector Configuration
COLLECTOR_HOST=localhost
COLLECTOR_PORT=8444
COLLECTOR_SSL_VERIFY=false

# Security Configuration
NONCE_LENGTH=32
SIGNATURE_ALGORITHM=sha256

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Instance IDs (optional)
INSTANCE_ID=instance-001
COLLECTOR_ID=collector-001
GATEWAY_ID=gateway-001
